<Window x:Class="MyLolNexus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyLolNexus"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <StackPanel Orientation="Horizontal" >
            <Label>Summoner name: </Label>
            <TextBox Width="200" Text="Ziltoid The Omn" x:Name="summoner_name"/>
            <ComboBox x:Name="server_combobox">
                <ComboBoxItem Name="EUW" IsSelected="True">EUW</ComboBoxItem>
                <ComboBoxItem Name="NA">NA</ComboBoxItem>
            </ComboBox>
            <Button x:Name="ok_button" Content="OK" Click="ok_button_Click"/>

       

        </StackPanel>
        <StackPanel x:Name="teamsStackPanel" Orientation="Horizontal">
            <StackPanel x:Name="team1StackPanel" Orientation="Vertical"></StackPanel>
            <StackPanel x:Name="team2StackPanel" Orientation="Vertical"></StackPanel>
        </StackPanel>
        
    </StackPanel>
</Window>
